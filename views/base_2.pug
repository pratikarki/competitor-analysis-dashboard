  body(style="font-family: 'Montserrat', sans-serif")
    //MODALS
    .modal.fade#logout_modal
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title
              small Are your sure you want to logout?
            .p-2(data-dismiss='modal')
              i.far.fa-times.cross
          .modal-footer
            a.btn.btn-white(type='button' data-dismiss='modal') Cancel
            a.btn.btn-outline-danger(type='button' href='/login') Yes, logout

    .modal.fade#add_modal
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title
              small Add a website.
            .p-2(data-dismiss='modal')
              i.far.fa-times.cross
          .modal-body.form-group.mb-4
            label(for='domain') Domain
            .input-group
              .input-group-prepend
                span.input-group-text https://www.
              input.form-control(type='text' id='domainName' placeholder='Domain Name')
          .modal-footer
            a.btn.btn-white(type='button' data-dismiss='modal') Cancel
            a.btn.btn-outline-danger(type='button' onclick='') Add

    .modal.fade#remove_site_modal
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title
              small Are your sure you want to remove this site?
            .p-2(data-dismiss='modal')
              i.far.fa-times.cross
          .modal-footer
            a.btn.btn-white(type='button' data-dismiss='modal') Cancel
            a.btn.btn-outline-danger(type='button' onclick='') Yes, remove

    .modal.fade#remove_table_modal
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title
              small Are your sure you want to remove this table?
            .p-2(data-dismiss='modal')
              i.far.fa-times.cross
          .modal-footer
            a.btn.btn-white(type='button' data-dismiss='modal') Cancel
            a.btn.btn-outline-danger(type='button' onclick='') Yes, remove

