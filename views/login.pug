extends base_1 

block content 
  section.home-pad 
    .container 
      .row.pb-5 
        .col-lg-7.d-block.py-4.py-md-5.pe-4.pe-md-5.ps-4.ps-sm-3
          h1.display-4 Welcome to 
            strong Competitor Analysis Dashboard
          p.text-monospace.text-muted.my-3 Designed for your Online Competition.
          hr
          p.lead.my-4 Where you can analyze your website's metrics with your competitors, perform research on keywords and find valuable insights, all in one place.
        
        .col-lg-5.px-3.pb-5.d-flex.justify-content-center
          .card.card-form.p-0.p-md-3.card-border
            .card-body.px-2.pb-2

              .text-center 
                h3.display-5(style='font-size: 2.6rem') Login 
                small Enter your credentials below.
              
              form.form.form--login.p-3.p-md-4

                .form-group 
                  label(for='email') Email *
                  .input-group
                    .input-group-prepend
                      i.input-group-text.fas.fa-at
                    input.form-control(type='email' id='email' placeholder='Email' required)
                
                .form-group.pt-4 
                  label(for='password') Password *
                  .input-group
                    .input-group-prepend
                      i.input-group-text.fas.fa-key 
                    input.form-control(type='password' id='password' placeholder='Password' required)
                    button(style='width: 45px;').input-group-text.pwToggle
                      i.far.fa-eye-slash.mx-auto
                  p.pt-2 
                    a.text-dark(href='/forgotPassword')
                      small.form-text.text-dark Forgot Your Password?

                .d-flex.justify-content-between.pt-3.pb-1
                  button.btn.btn-dark
                    i.far.fa-sign-in-alt.me-2
                    | Login
                  .flex-column.align-self-center
                    small.text-dark Dont Have an Account? 
                      a.text-dark(href='/register')
                        strong  Sign Up

