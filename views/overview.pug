                            th Domain Strength
                            th Outbound Links
                            th
                              i.far.fa-times.fa-lg.cross(data-toggle='modal' data-target='#remove_table_modal')
                        tbody
                          each key, i in domain.backlinks.backlinkDomain 
                            tr
                              td.ps-5.align-lt
