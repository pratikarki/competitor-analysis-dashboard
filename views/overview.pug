                              td= domain.backlinks.domainMonthlyOrganicClicks[i]
                              td= domain.backlinks.pageMonthlyOrganicClicks[i]
                              td= domain.backlinks.domainStrength[i]
                              td= domain.backlinks.outboundLinks[i]
                              td.text-muted
                                i.fal.fa-times.cross(onclick='')
                //- end of sixth row of 1st tab

